<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/registerFragment">

    <!-- Fragment rejestracji -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.project.androidbingo.ui.login.RegisterFragment"
        android:label="Rejestracja"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_mainMenu"
            app:destination="@id/mainMenu"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <!-- Główne menu -->
    <fragment
        android:id="@+id/mainMenu"
        android:name="com.project.androidbingo.MainMenu"
        android:label="main_menu"
        tools:layout="@layout/main_menu">
        <action
            android:id="@+id/action_mainMenu_to_current_bingo"
            app:destination="@id/current_bingo"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_mainMenu_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <!-- Dodaj akcję do przejścia do AddBingoFragment -->
        <action
            android:id="@+id/action_mainMenu_to_addBingoFragment"
            app:destination="@id/addBingoFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/mainMenu" />
    </fragment>

    <!-- Aktualne Bingo -->
    <activity
        android:id="@+id/current_bingo"
        android:name="com.project.androidbingo.current_bingo"
        android:label="activity_current_bingo"
        tools:layout="@layout/activity_current_bingo" />

    <!-- Profil użytkownika -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.project.androidbingo.ui.profile.ProfileFragment"
        android:label="Mój profil"
        tools:layout="@layout/fragment_profile" />

    <!-- Nowy fragment do dodawania planszy Bingo -->
    <fragment
        android:id="@+id/addBingoFragment"
        android:name="com.project.androidbingo.ui.addbingo.AddBingoFragment"
        android:label="Dodaj planszę Bingo"
        tools:layout="@layout/fragment_add_bingo">
        <!-- Możesz dodać akcje nawigacyjne, jeśli są potrzebne -->
    </fragment>

</navigation>