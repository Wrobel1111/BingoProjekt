<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Nagłówek -->
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BINGO 2025"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <!-- Sekcja Twoje Bingo -->
        <TextView
            android:id="@+id/section_your_bingo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Twoje bingo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <!-- Karty Twoje Bingo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#FF6F00"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Podróże 2025"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#3F51B5"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Książki 2025"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Sekcja Sugestie -->
        <TextView
            android:id="@+id/section_suggestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sugestie"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <!-- Karty Sugestie -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#FFEB3B"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#FF6F00"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ideas 2025"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Dodatkowa karta -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#4CAF50"
            app:cardCornerRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biology\nChapter 3: Animal Kingdom"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
